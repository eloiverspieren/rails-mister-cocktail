<div class="container">
  <div class="row">

    <div class="col-sm-1"></div>
      <div class="col-sm-10">

        <div class="card_1 text-center">
          <h2><%= @cocktail.name %></h2>
        </div>

        <div class="col-xs-12 col-sm-offset-3 col-sm-6">
          <div class="card" style="background-image: url('<%= @cocktail.image_url %>');"></div>
          <p>Doses</p><br><br>
          <% @cocktail.doses.each do |d| %>
            <h2><%= d.description %></h2>
            <% @dose.ingredients.each do |i| %>
            <%= i.name %>
            <% end %>
          <% end %>
        </div>

      </div>

        <div>
          <%= link_to "New Dose", "/cocktails/#{@cocktail.id}/doses/new", :class => "btn btn-success" %>
          <%= link_to "Delete this cocktail", "/cocktails/#{@cocktail.id}", method: :delete, data: { confirm: "Are you sure?" }, :class => "btn btn-danger" %>
          <%= link_to "Back to Menu", "/cocktails", :class => "btn btn-primary" %>
        </div>

    </div>

  </div>
</div>

<div class="col-xs-12 col-sm-6 col-sm-offset-3">

          <div class="form-login">
            <h1>New Dose</h1>
            <form action="#">
              <div class="form-group">
                <label for="email">Your email</label>
                <input type="email" class="form-control" id="email" placeholder="bob@gmail.com">
              </div>
              <div class="form-group">
                <label for="password">Your password</label>
                <input type="password" class="form-control" id="password" placeholder="******">
              </div>
              <input type="submit" value="Signup" class="btn btn-primary">
            </form>
          </div>
        </div>


