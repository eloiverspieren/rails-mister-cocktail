<div class="container">
  <div class="row">
  <h2>CREATE YOUR DOSE</h2>

    <div class="col-sm-1"></div>
    <div class="col-sm-10">
    <div class="card-show">
        <%= form_for [@cocktail, @dose] do |f| %>
        <%= f.label :ingredient_id %><br>
        <%= f.collection_select :ingredient_id, Ingredient.all, :id, :name %><br><br>
        <%= f.label :description %><br>
        <%= f.text_area :description %><br><br>
        <%= f.submit "Add", :class => "btn btn-success" %><br><br>
        <% end %>
        <%= link_to "Back to Menu", "/cocktails", :class => "btn btn-primary" %>
      </div>
    </div>
  </div>
